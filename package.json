{
  "name": "astro",
  "version": "1.0.0",
  "description": "A professional Node.js application",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "echo 'No build step needed'",
    "vercel-build": "echo 'No build step needed'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "prepare": "husky install",
    "seed:personas": "node src/seeders/personaSeeder.js",
    "seed:reviews": "node src/scripts/testReviewSystem.js",
    "test:reviews": "node src/scripts/testReviewSystem.js",
    "test:horoscope": "node src/scripts/testHoroscope.js",
    "test:enhanced": "echo 'Enhanced horoscope system ready! Check /api/v1/enhanced/ for endpoints'",
    "db:connect": "node -e \"import('./src/config/database.js').then(db => db.connectDB())\"",
    "db:test": "node scripts/test-db-connection.js"
  },
  "keywords": [
    "nodejs",
    "javascript",
    "express",
    "api"
  ],
  "author": "Yuvraj Singh",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "astrojs": "^0.1.3",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "vedic-astrology": "^1.0.6"
  }
}
